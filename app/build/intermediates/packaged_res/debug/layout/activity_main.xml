<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background"
    tools:context=".activity.MainActivity">

    <TextView
        android:id="@+id/tv_lokasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lokasi: -"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/on_background"
        android:layout_marginBottom="8dp"/>

    <Spinner
        android:id="@+id/spinner_kota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:padding="8dp"
        android:background="@android:drawable/btn_dropdown"/>

    <TextView
        android:id="@+id/tv_tanggal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tanggal: -"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textColor="@color/on_background"
        android:layout_marginBottom="24dp"/>

    <!-- Include rows for each prayer time -->
    <include
        android:id="@+id/jadwal_subuh"
        layout="@layout/item_jadwal" />
    
    <include
        android:id="@+id/jadwal_dzuhur"
        layout="@layout/item_jadwal" />

    <include
        android:id="@+id/jadwal_ashar"
        layout="@layout/item_jadwal" />

    <include
        android:id="@+id/jadwal_maghrib"
        layout="@layout/item_jadwal" />

    <include
        android:id="@+id/jadwal_isya"
        layout="@layout/item_jadwal" />

</LinearLayout>
